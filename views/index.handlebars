<div class="container" style="text-align: center;">
    <br><br>

    <div class="bg-light p-5 rounded">
        <h1 class="main"><i class="fas fa-hamburger"></i>Burgers!<i class="fas fa-hamburger"></i></h1>
        <br><br>
        <form id="create-form">
            <div class="form-group">
                <input type="text" id="burg" name="burger_name" placeholder="Add a Burger to the list!" required>
            </div>
            <br><br>
            <button type="submit" class="btn btn-lg btn-success">Add Burger!</button>
        </form>

    </div>

    <br><br><br><br>

    <div class="container">
        <div class="row align-items-start">
            <div class="col">
                <div class="list-group">
                    <button type="button" class="list-group-item list-group-item-action list-group-item-danger"
                        aria-current="true">
                        Click to Devour!
                    </button>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devour=true}}
                    {{/unless}}
                    {{/each}}
                </div>
            </div>

            <div class="col">
                <div class="list-group">
                    <button type="button" class="list-group-item list-group-item-action list-group-item-danger"
                        aria-current="true">
                        Click to Undevour!
                    </button>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devour=false}}
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <br><br><br><br>

    <div class="bg-light p-5 rounded">
        <h1 class="header"><i class="fas fa-hamburger"></i>Delete Burger!<i class="fas fa-hamburger"></i></h1>
        <br><br>
        <div class="form-group">
            {{#each burgers}}
                <button class="btn btn-lg btn-danger delete" data-id="{{id}}">{{burger_name}}</button>
            {{/each}}
        </div>
    </div>


</div>